{% extends 'base.html.twig' %}

{% block title %}Gantt {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/gantt/css/dhtmlxgantt.css') }}" />
    <style type="text/css" media="screen">
        html, body{
            margin:0px;
            padding:0px;
            height:100%;
            overflow:hidden;
        }

    </style>
{% endblock %}

{% block body %}
    <div id="gantt_here"></div>
    <script type="text/javascript">
        window.onload = function(e){
            $(document).ready(function() {
                gantt.init("gantt_here");
            });
        };
    </script>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/gantt/js/dhtmlxgantt.js') }}"></script>
{% endblock %}
