<script type="text/javascript">
    $(document).on('click','.edit-row',function(){
        var that = this;
        var url = Routing.generate('{{ cat }}_edit', {'id': that.parentNode.parentNode.id});
        $(that).find("span").addClass("slideInLeft");
        createForm(url,"GET");
    });
    $(document).on('click','.del-row',function(){
        var that = this;
        var url = Routing.generate('{{ cat }}_delete', {'id': that.parentNode.parentNode.id});
        $(that).find("span").addClass("rotate");
        createForm(url,"DELETE");
    });
    $(document).on('click','#addForm',function(){
        var that = this;
        var url = Routing.generate('{{ cat }}_new');
        $(that).find("span").addClass("flash");
        createForm(url,"GET");
    });
    $(document).on('click','#submitProject',function(){
        $('#projectForm').submit();
    });
</script>