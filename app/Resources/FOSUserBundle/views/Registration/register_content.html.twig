{% trans_default_domain 'FOSUserBundle' %}


<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': ''}}) }}
            <div class="form-group has-feedback {% if (form_errors(form.username) |length > 4) %}has-error{% endif %}">
                {{ form_label(form.username) }}
                {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.username) }}
            </div>
            <div class="form-group has-feedback {% if (form_errors(form.email) |length > 4) %}has-error{% endif %}">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group has-feedback {% if (form_errors(form.plainPassword.first) |length > 4) %}has-error{% endif %}">
                <div class="col-sm-4 control-label">
                    {{ form_label(form.plainPassword.first) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>
            <div class="form-group has-feedback {% if (form_errors(form.plainPassword.second) |length > 4) %}has-error{% endif %}">
                <div class="col-sm-4 control-label">
                    {{ form_label(form.plainPassword.second) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_rest(form) }}
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
